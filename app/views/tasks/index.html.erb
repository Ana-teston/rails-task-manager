<div class="text-center my-6">
  <h1 class="text-2xl font-bold mb-4">All Tasks</h1>

  <ul class="mx-auto max-w-xs">
    <% @tasks.each do |task| %>
      <li class="text-center">
        <label class="flex items-center">
          <input type="checkbox" class="mr-2" <%= 'checked' if task.completed %>>
          <%= link_to task.title, task_path(task), class: "text-green-500 hover:underline"  %>
        </label>
      </li>
    <% end %>
  </ul>
  <div class="p-6">
    <%= link_to "+ Add a new task", new_task_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>
