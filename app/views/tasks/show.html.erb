<div class="p-4 m-6">
    <h2 class="text-lg font-semibold"><%= @task.title %></h2>
    <p class="mt-2 p-4 bg-gray-200"><%= @task.details %></p>
  </div>

  <div class="m-4 p-6">
    <% if @task.completed %>
      <p>This task is done</p>
    <% else %>
      <p>
        <span>This task is not completed yet</span>
      </p>
    <% end %>
  </div>
  <div class="m-4 p-6">
    <%= link_to "+ Edit your task", edit_task_path(@task), class: "text-blue-500 hover:underline" %>
  </div>
  <div class="m-4 p-6">
    <%= link_to "Destroy", task_path(@task),
    data: {
      turbo_method: :delete,
      turbo_confirm: 'Are u sure?'
    },
     class: "text-red-500 hover:underline" %>
  </div>
  <div class="m-4 p-6"><%= link_to "<- Back to tasks", tasks_path, class: "text-green-500 hover:underline"  %></div>
</div>
